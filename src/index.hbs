<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400;900&display=swap" rel="stylesheet">
  <title> {{restaurant.name}} | {{restaurant.address}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
  <script src="./app.{{buildHash}}.bundle.js"></script>
  <link rel="stylesheet" href="./app.{{buildHash}}.css">
</head>

<body>
  <div id="top__bar">
    <span id="menu-btn">
      <svg class="menu-btn-svg" viewBox="0 0 100 80" width="20" height="20">
        <rect width="100" height="20"></rect>
        <rect y="30" width="100" height="20"></rect>
        <rect y="60" width="100" height="20"></rect>
      </svg>
    </span>
  </div>
  <div id="menu">
    <ul class="menu-list" id="menu-list">
      {{#each menu.menu}}
      <li>
        <a class="menu-link" href="#category-{{@index}}">
          {{categoryTitle}}
        </a>
      </li>

      {{/each}}
    </ul>
  </div>
  <div class="content">
    <header id="header">

      <div class="header__info">
        <h1 class="header__title">
          {{restaurant.name}}
        </h1>
        <h2 class="header__subtitle">
          <span class="header__info-slogan"> {{restaurant.slogan}}</span>
        </h2>
        <span class="header__info-address"> {{restaurant.address}}</span>
      </div>
    </header>
    <main id="main">
      {{#each menu.menu}}
      <section class="section" id="category-{{@index}}">
        <h3 class="section__title">
          {{categoryTitle}}
        </h3>
        <ul class="section__dishes">
          {{#each dishes}}
          <li class="dish">
            <div class="dish__picture"></div>
            <div class="dish__info">
              <h4 class="dish__title">
                {{dishTitle}}
              </h4>
              <p class="dish__desc">
                {{dishDesc}}
              </p>
              {{#if dishVariants}}
              <ul class="dish__variants">
                {{#each dishVariants}}
                <li class="dish__variant">
                  <div class="desc">
                    {{variantTitle}} {{#if variantDesc}} - {{variantDesc}} {{/if}}
                  </div>
                  <div class="price">
                    {{price}} â‚¬
                  </div>
                </li>
                {{/each}}
              </ul>
              {{/if}}

            </div>
          </li>
          {{/each}}
        </ul>
      </section>
      {{/each}}
    </main>
  </div>
</body>

</html>